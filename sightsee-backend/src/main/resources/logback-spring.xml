<configuration>

    <appender name="SPLUNK" class="com.splunk.logging.HttpEventCollectorLogbackAppender">
        <url>${SPLUNK_HEC_URL}</url>
        <token>${SPLUNK_HEC_TOKEN}</token>
        <batch_size_count>1</batch_size_count>  <!-- send events immediately -->
        <batch_interval>0</batch_interval>
        <max_events_batch>1</max_events_batch>
        <send_mode>sequential</send_mode>
    </appender>

    <!-- Console for local debugging -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="SPLUNK" />
    </root>

</configuration>
